  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"
    integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">

  <title>Hello, world!</title>
</head>

<body>
  <!-- NavBar -->
  <%- include('nav.html') %>
  <!-- Nav Bar 끝 -->

  <!-- 글작성 form -->
  <div class="container mt-4">
    <form action="/edit?_method=PUT" method="POST">
      <!-- 수정(PUT)요청은 안되니까 메소드 오버라이드 설치하자 -->
      <!--
        ⭐ 메소드 오버라이드는 HTML에서 PUT/DELETE 요청할 수 있도록 도와주는 라이브러리
        1. npm install method-override 설치
        2. server.js 상단에 첨부
          const methodOverride = require('method-override')
          app.use(methodOverride('_method'))
        3. form 의 action 속성에다가 ?_method=PUT 넣기
      -->
      <div class="form-group">
        <label for="exampleInputEmail1">오늘의 할 일</label>
        <!-- ⭐ 폼 전송시 _id:?? 정보도 함께 보내기(안보이는 input을 만들고 value에다가 id를 넣어서 서버로 전달) -->
        <input type="text" value="<%= postData._id %>" name="id" style="display: none;">
        <input type="text" class="form-control" name="title" value="<%= postData.title %>">
        <!-- ⭐ input에다가 value 속성을 이용해 미리 값을 채울 수 있다. -->
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">날짜</label>
        <input type="text" class="form-control" name="date" value="<%= postData.date %>">
      </div>
      <button type="submit" class="btn btn-info">수정하기</button>
    </form>
  </div>
  <!-- 글작성 form 끝 -->




  <!-- 제이쿼리 -->
